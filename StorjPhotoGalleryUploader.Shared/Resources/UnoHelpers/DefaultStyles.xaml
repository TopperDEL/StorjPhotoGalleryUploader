<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="StorjBlue">#276CFF</Color>
    <SolidColorBrush x:Key="StorjDefaultBrush" Color="{StaticResource StorjBlue}"/>

    <Color x:Key="FailedColor">Red</Color>
    <SolidColorBrush x:Key="FailedBrush" Color="{StaticResource FailedColor}"/>

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource StorjBlue}"/>
            <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
            <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource StorjBlue}"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
